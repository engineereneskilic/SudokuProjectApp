@model sudokuproject.Models.RoleEditModel
@{
	ViewBag.Title = "Edit";
}

<hr />
@using (Html.BeginForm())
{
	<input type="hidden" name="RoleName" value="@Model.Role.Name" />
	<input type="hidden" name="RoleId" value="@Model.Role.Id" />

	<div class="panel panel-primary">
		<div class="panel-heading">
			Add to @Model.Role.Name
		</div>
		<table class="table table-hover">
			@if (Model.NonMembers.Count() == 0)
			{
				<tr><td colspan="2">You do not have different types of roles that you can add to this role.</td></tr>
			}
			else
			{
				<tr>
					<td>User Id</td>
					<td>Role</td>
				</tr>
				foreach (var nonmembers_user in Model.NonMembers)
				{
					<tr>
						<td>@nonmembers_user.UserName</td>

						<td><input type="checkbox" name="IdsToAdd" value="@nonmembers_user.Id" /></td>
					</tr>
				}
			}
		</table>
	</div>






	<div class="panel panel-primary">
		<div class="panel-heading">
			Remove from @Model.Role.Name
		</div>
		<table class="table table-hover">
			@if (Model.Members.Count() == 0)
			{
				<tr><td colspan="2">You do not have different types of roles attached to this role.</td></tr>
			}
			else
			{
				<tr>
					<td>User Id</td>
					<td>Role</td>
				</tr>
				foreach (var members in Model.Members)
				{
					<tr>
						<td>@members.UserName</td>

						<td><input type="checkbox" name="IdsToDelete" value="@members.Id" /></td>
					</tr>
				}
			}
		</table>
	</div>

	<button type="submit" class="btn btn-primary">Save</button>
}





