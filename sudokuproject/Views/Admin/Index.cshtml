@model IEnumerable<sudokuproject.Identity.ApplicationUser>
@{
	ViewBag.Title = "Index";
}


<center><h2 class="game-header">Users</h2></center>
<hr />
<div class="container">
	<div class="row">
		<div class="col-sm-offset-3 col-sm-3 col-md-5">
			<div class="green-card-div" style="display:inline-block;">
				<center>

					<table class="table table-hover">
						<tr style="background-color:steelblue;color:white;">
							<th>Id</th>
							<th>Username</th>
							<th>Email</th>
							<th>*</th>
						</tr>
						@if (Model.Count() == 0)
						{
							<tr>
								<td colspan="3" class="text-center">
									Not we have a user !
								</td>
							</tr>
						}
						else
						{
							foreach (var role in Model)
							{
								<tr style="background:white;">
									<td>@role.Id</td>
									<td>@role.UserName</td>
									<td>@role.Email</td>
									<td>
										@using (Html.BeginForm("Delete", "RoleAdmin", new { id = role.Id }))
										{
											<button type="submit" class="btn btn-danger">Delete</button>
											<br /><br />
										}
										@Html.ActionLink("Edit", "Edit", new { id = role.Id }, new { @class = "btn btn-primary" })
									</td>
								</tr>
							}

						}
					</table>


				</center>
			</div>
		</div>
	</div>
</div>

