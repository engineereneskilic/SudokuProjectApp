@model sudokuproject.Models.Register
@{
	ViewBag.Title = "Register";
}

	<center><h2 class="game-header">Register User</h2></center>
<hr />
<div class="container">
	<div class="row">
		<div class="col-sm-offset-4 col-sm-3 col-md-5">
			<div class="green-card-div" style="display:inline-block;">
				<center>

					@Html.ValidationSummary()

					@using (Html.BeginForm())
					{
						@Html.AntiForgeryToken()
						<div class="form-group">
							<label>Username</label>
							@Html.TextBoxFor(i => i.UserName, new { @class = "form-control" })
						</div>

						<div class="form-group">
							<label>Email</label>
							@Html.TextBoxFor(i => i.Email, new { @class = "form-control" })
						</div>
						<div class="form-group">
							<label>Password</label>
							@Html.TextBoxFor(i => i.Password, new { @class = "form-control", @type = "Password" })
						</div>

						<button type="submit" class="btn btn-success btn-block">Register</button>
						<br />
						<a href="/Account/Login" class="btn btn-primary btn-block">Login</a>

					}
				</center>
			</div>
		</div>
	</div>
</div>

<br />
